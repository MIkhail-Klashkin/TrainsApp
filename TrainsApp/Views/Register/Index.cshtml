@model TrainsApp.Models.UserDB

@{
    ViewBag.Title = "Registration";
}

<h2>Регистрация</h2>
<div class="my-panel wide-panel">
    <div class="my-panel-header">
        <div class="my-header-text">
            Регистрация нового пользователя
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <form>
                <table width="100%" border="0" class="my-table">
                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.Username)*
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @title = "От 3 до 10 символов. Латиница, кириллица, цифры и подчёркивания" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.Username)
                            </div>
                        </td>

                    </tr>
                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.Password)*
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "Password", @title = "От 6 до 10 символов. Латиница, цифры и подчёркивания" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </td>

                    </tr>
                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.PasswordConfirm)*
                            @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", type = "Password" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.PasswordConfirm)
                            </div>
                        </td>

                    </tr>

                    <tr>
                        <td class="form-group form-check">
                            @Html.CheckBoxFor(model => model.Role, new { htmmAttributes = new { @class = "form-control" } })
                            @Html.LabelFor(model => model.Role, new { @class = "my-desc-text" })
                        </td>
                    </tr>
                    <tr>
                        <td><button type="submit" class="btn button-gray btn-block">Зарегистрироваться</button></td>
                    </tr>
                </table>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </form>
        }
    </div>

</div>
<div class="tiny-panel">
    Уже есть аккаунт?
    @Html.ActionLink("Войти", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "btn button-gray", @role = "button" })
</div>
