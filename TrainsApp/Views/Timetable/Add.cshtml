@model TrainsApp.Models.ViewModel.TimetableViewModel
@{
    ViewBag.Title = "Добавить";
}

<h2>Добавить</h2>

<div class="my-panel wide-panel">
    <div class="my-panel-header">
        <div class="my-header-text">
           Добавление элемента
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Add", "Timetable", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <form>
                <table width="100%" border="0" class="my-table">
                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.TrainNumber)*
                            @Html.EditorFor(model => model.TrainNumber, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.TrainNumber)
                            </div>
                        </td>

                    </tr>
                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.Way)
                            @Html.EditorFor(model => model.Way, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.Way)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.Platform)
                            @Html.EditorFor(model => model.Platform, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.Platform)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.Destination)
                            @Html.EditorFor(model => model.Destination, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.Destination)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.DepartureTime)
                            @Html.EditorFor(model => model.DepartureTime, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.DepartureTime)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.ArrivalTime)
                            @Html.EditorFor(model => model.ArrivalTime, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.ArrivalTime)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.Type)
                            @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.Type)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td valign="top">
                            @Html.LabelFor(model => model.WagonCount)
                            @Html.EditorFor(model => model.WagonCount, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.WagonCount)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><button type="submit" class="btn button-gray btn-block">Добавить</button></td>
                        <td><button type="submit" class="btn button-gray btn-block">Отмена</button></td>
                    </tr>
                </table>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </form>
        }
    </div>
    </div>